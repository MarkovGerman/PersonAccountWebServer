@model Tuple<PersonalAccountWebServer.Models.PersonalAccount, List<PersonalAccountWebServer.Models.Resident>>

@{
    ViewData["Title"] = "Accounts Details";
}

<h1>Подробности ЛС</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Номер ЛС
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item1.NumberPA)
        </dd>
        <dt class = "col-sm-2">
            Дата старта
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item1.DateStart)
        </dd>
        <dt class = "col-sm-2">
            Дата окончания
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item1.DateEnd)
        </dd>
        <dt class = "col-sm-2">
            Адрес
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item1.Address)
        </dd>
        <dt class = "col-sm-2">
            Площадь
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Item1.Area)
        </dd>
    </dl>
</div>
<h3>Жильцы</h3>
<table id="table"
       data-toggle="table"
       data-filter-control="true"
       data-filter-control-container="#service-environment"
       data-click-to-select="true"
       data-toolbar="#toolbar"
       class="table table-striped table-responsive">
    <thead>
        <tr>
            <th data-field="resident" data-filter-control="input" data-sortable="true">
                Id жильцов
            </th>
            <th data-field="surname" data-filter-control="input" data-sortable="true">
                Фамилия
            </th>
            <th data-field="name" data-filter-control="input" data-sortable="true">
                Имя
            </th>
            <th data-field="middle-name" data-filter-control="input" data-sortable="true">
                Отчество
            </th>
            <th data-field="number" data-filter-control="input" data-sortable="true">
                Id лицевого счёта
            </th>
            <th class="column-sm-2" data-formatter="editAccountFormatter">Редактировать | Подробности | Удалить</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Item2)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MiddleName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdRoom)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Item1.Id">Изменить</a> |
    <a asp-action="Index">Вернуться</a>
</div>
